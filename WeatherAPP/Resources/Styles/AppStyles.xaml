<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="MainStackLayout" TargetType="VerticalStackLayout">
        <Setter Property="Margin" Value="0,10,0,0"></Setter>
        <Setter Property="Spacing" Value="15"></Setter>
        <Setter Property="VerticalOptions" Value="Center"></Setter>
        
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource White}"></Setter>
        <Setter Property="FontFamily" Value="Rubik"></Setter>
        <Setter Property="HorizontalOptions" Value="Center"></Setter>
        <Setter Property="VerticalOptions" Value="Center"></Setter>
    </Style>

    <Style x:Key="Title" TargetType="Label">
        <Setter Property="FontAttributes" Value="Bold"></Setter>
        <Setter Property="FontSize" Value="Large"></Setter>

    </Style>

</ResourceDictionary>